<local:BasePlotControl x:Class="Sumerics.Controls.Plots.Wpf3dPlotControl"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:local="clr-namespace:Sumerics.Controls.Plots"
                       xmlns:p="clr-namespace:WPFChart3D;assembly=WPFChart3D"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                       mc:Ignorable="d" 
                       d:DesignHeight="300" 
                       d:DesignWidth="300">
    <p:Plot3D Title="{Binding Title}"
              IsAxisShown="{Binding IsAxisShown}"
              Model="{Binding Model}"
              ScaleX="{Binding Transformation.ScaleX, Mode=TwoWay}"
              ScaleY="{Binding Transformation.ScaleY, Mode=TwoWay}"
              ScaleZ="{Binding Transformation.ScaleZ, Mode=TwoWay}"
              RotateX="{Binding Transformation.RotateX, Mode=TwoWay}"
              RotateY="{Binding Transformation.RotateY, Mode=TwoWay}"
              RotateZ="{Binding Transformation.RotateZ, Mode=TwoWay}"
              RotateAngle="{Binding Transformation.Angle, Mode=TwoWay}"
              x:Name="Plotter" />
</local:BasePlotControl>
